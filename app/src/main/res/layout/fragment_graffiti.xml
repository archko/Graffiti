<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/graffiti"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <LinearLayout
        android:id="@+id/graffiti_controller"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:paddingBottom="4dp">

        <TextView
            android:id="@+id/undo"
            style="@style/btn_common_style"
            android:layout_gravity="center_vertical"
            android:text="撤销" />

        <TextView
            android:id="@+id/redo"
            style="@style/btn_common_style"
            android:layout_gravity="center_vertical"
            android:text="恢复" />

        <TextView
            android:id="@+id/clear"
            style="@style/btn_common_style"
            android:layout_gravity="center_vertical"
            android:text="清除" />

        <TextView
            android:id="@+id/round"
            style="@style/btn_common_style"
            android:layout_gravity="center_vertical"
            android:text="旋转" />

        <TextView
            android:id="@+id/color_selector"
            style="@style/btn_common_style"
            android:layout_gravity="center_vertical"
            android:text="颜色" />

        <TextView
            android:id="@+id/eraser"
            style="@style/btn_common_style"
            android:layout_gravity="center_vertical"
            android:text="橡皮" />

        <TextView
            android:id="@+id/save"
            style="@style/btn_common_style"
            android:layout_gravity="center_vertical"
            android:text="保存" />

    </LinearLayout>
</LinearLayout>